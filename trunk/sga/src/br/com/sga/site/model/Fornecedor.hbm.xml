<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

  <class            name="br.com.sga.site.bean.Fornecedor"
                   table="Fornecedor">

    <!-- Primary Key -->
    <id             name="codigo"  column="codigo">
      <generator   class="increment"/>
    </id>

    <!-- Direct Data Properties -->
    <property  name="razaosocial"  column="razaosocial"/>
    <property  name="endereco"     column="endereco"/>
    <property  name="cpfcnpj"      column="cpfcnpj"/>
    <property  name="rgie"         column="rgie"/>
    <property  name="telefone"     column="telefone"/>    
    <property  name="datainclusao" column="datainclusao"/>
    <property  name="status"       column="status"/>

  </class>

</hibernate-mapping>