<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

  <class            name="br.com.sga.site.bean.Usuario"
                   table="Usuario">

    <!-- Primary Key -->
    <id             name="codigo"  column="codigo">
      <generator   class="increment"/>
    </id>

    <!-- Direct Data Properties -->
    <property  name="nome"         column="nome"/>
    <property  name="senha"        column="senha"/>
    <property  name="status"       column="status"/>   
    <property  name="cpf"          column="cpf"/>
    <property  name="rg"           column="rg"/>
    <property  name="telefone"     column="telefone"/>
    <property  name="tipo"         column="tipo"/>
    <property  name="datainclusao" column="datainclusao"/>    
  </class>

</hibernate-mapping>