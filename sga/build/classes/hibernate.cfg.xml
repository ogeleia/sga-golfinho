<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!-- Data Source Name -->
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/golfinho</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>

    <!-- SQL dialect -->
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

    <!-- Debug logging of SQL statements -->
    <property name="show_sql">true</property>

    <!-- Enable Hibernate's automatic session context management -->
    <property name="current_session_context_class">thread</property>

    <!-- Mapping Files -->
    <mapping resource="br/com/sga/site/model/Aluno.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/Classe.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/Fornecedor.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/Grupo.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/GrupoModulo.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/Historico.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/Matricula.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/Modalidade.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/Modulo.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/Plano.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/Professor.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/Turma.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/Usuario.hbm.xml"/>
    <mapping resource="br/com/sga/site/model/UsuarioGrupo.hbm.xml"/>
    
  </session-factory>
</hibernate-configuration>
